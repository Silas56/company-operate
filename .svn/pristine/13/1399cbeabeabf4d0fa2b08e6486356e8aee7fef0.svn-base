.gray-btn{background-color: #E8E7E4;text-align: center;cursor: pointer;color: #333;}
.shopDetail ul .liActive, .checkDetail ul .liActive{border: 1px solid #0099c2;float: left;width: 135px;list-style: none;color: white;cursor: pointer;background-color: #0099c2;height: 35px;text-align: center;padding-top: 5px;}
.shopDetail ul .liNotActive, .checkDetail ul .liNotActive{border: 1px solid #0099c2;float: left;width: 135px;list-style: none;color: #0099c2;cursor: pointer;background-color: white;height: 35px;text-align: center;padding-top: 5px;}
.shopDetail ul li, .checkDetail ul li{list-style: none;}
.shopDetail ul .liActive a, .checkDetail ul .liActive a{color: white;}
.shopDetail ul .liNotActive a, .checkDetail ul .liNotActive a{color: #0099c2;}
