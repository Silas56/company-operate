/* make our pages be full width and full height */
a{color: #000;text-decoration: none;font-size: 12px;}
a:hover{text-decoration: none;}
/* ��ҳ��css ----------- */
.menu-div{
	width: 1200px;
	margin: auto;
}
.menu {
	float: left;
    list-style: none;
	width: 975px;
	border: 0;
	height: 100%;
	padding-left: 15px;
}
.menu > li {
    display: inline;
}

.menu > li:nth-child(1):before {
    content: "";
    padding: 0;
}

.menu > li > a{
	font-size: 16px;
	padding: 26px 20px;
	display: block;
	float: left;
}

.menu > li > a:hover{
	color: #e55634;
	border-bottom: 4px solid #e55634;
}

.exit > a:hover{
	border-bottom: none !important;
}
